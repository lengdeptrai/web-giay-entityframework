@{
    ViewData["Title"] = "ManageAccount Page";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 login-container">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Manage Account</h3>
                </div>
                <div class="card-body">
                    <div class="group-btn">
                        <form class="editable-field" asp-controller="ManageAccount" asp-action="UpdateName" method="post" enctype="multipart/form-data">
                            <span class="text-value">@ViewBag.Name</span>
                            <input type="text" class="edit-input" name="NameEdit" style="display:none; width:100%" ;">
                            <i class="fa-solid fa-pen edit-icon" onclick="toggleEdit(this)"></i>
                            <button type="submit" class="save-icon" style="display:none">
                                <i class="fa-solid  fa-check save-icon" onclick="saveEdit(this)"></i>
                            </button>
                        </form>
                    </div>
                    <div class="group-btn">
                        <form class="editable-field" asp-controller="ManageAccount" asp-action="UpdatePhone" method="post" enctype="multipart/form-data">
                            <span class="text-value">@ViewBag.Phone</span>
                            <input type="text" class="edit-input" name="PhoneEdit" style="display:none; width:100%" ;">
                            <i class="fa-solid fa-pen edit-icon" onclick="toggleEdit(this)"></i>
                            <button type="submit" class="save-icon" style="display:none">
                                <i class="fa-solid  fa-check save-icon" onclick="saveEdit(this)"></i>
                            </button>
                        </form>
                    </div>
                    <div class="group-btn">
                        <form class="editable-field" asp-controller="ManageAccount" asp-action="UpdateAddress" method="post" enctype="multipart/form-data">
                            <span class="text-value">@ViewBag.Address</span>
                            <input type="text" class="edit-input" name="AddressEdit" style="display:none; width:100%" ;>
                            <i class="fa-solid fa-pen edit-icon" onclick="toggleEdit(this)"></i>
                            <button type="submit" class="save-icon" style="display:none">
                                <i class="fa-solid  fa-check save-icon" onclick="saveEdit(this)"></i>
                            </button>
                        </form>
                    </div>
                    <div class="group-btn">
                        <a class="nav-link text-black" asp-area="" asp-controller="Logout" asp-action="Index">
                            <span>Đăng xuất</span>
                            <i class="fa-solid fa-right-from-bracket text-danger"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleEdit(icon) {
        var editableField = icon.parentElement;
        var textValue = editableField.querySelector('.text-value');
        var editIcon = editableField.querySelector('.edit-icon');
        var editInput = editableField.querySelector('.edit-input');
        var saveIcon = editableField.querySelector('.save-icon');

        textValue.style.display = 'none';
        editIcon.style.display = 'none';
        editInput.style.display = 'inline-block';
        saveIcon.style.display = 'inline-block';

        editInput.value = textValue.innerText;
    }

    function saveEdit(icon) {
        var editableField = icon.parentElement;
        var textValue = editableField.querySelector('.text-value');
        var editIcon = editableField.querySelector('.edit-icon');
        var editInput = editableField.querySelector('.edit-input');
        var saveIcon = editableField.querySelector('.save-icon');

        textValue.innerText = editInput.value;

        textValue.style.display = 'inline-block';
        editIcon.style.display = 'inline-block';
        editInput.style.display = 'none';
        saveIcon.style.display = 'none';
    }
</script>

<style>
    .group-btn {
        margin-bottom: 10px; /* Add margin between group-btn elements */
    }

    .editable-field {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
    }

        .editable-field .text-value {
            margin-right: 10px; /* Add margin between text and edit icon */
        }

    .edit-icon,
    .save-icon {
        cursor: pointer;
        margin-left: 5px; /* Add margin between icons */
    }

</style>
